}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
ScrollBars */
QScrollBar:horizontal {
    border: none;
    background: #3ba4a7;
    height: 20px;
    margin: 0px 21px 0 21px;
	border-radius: 0px;
}
QScrollBar::handle:horizontal {
    background: #3ba4a7;
    min-width: 25px;
	border-radius: 5px
}
QScrollBar::add-line:horizontal {
    border: none;
    background: #3ba4a7;
    width: 20px;
	border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: none;
    background: #3ba4a7;
    width: 20px;
	border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal
{
     background-color: #a1dbdc;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
     background-color: #a1dbdc;
}
 QScrollBar:vertical {
    background: #3ba4a7;
	border: none;
    width: 20px;
    margin: 21px 0 21px 0;
	border-radius: 5px;
 }
 QScrollBar::handle:vertical {
	background: #3ba4a7;
    min-height: 25px;
	border-radius: 5px
 }
 QScrollBar::add-line:vertical {
     border: none;
    background: #3ba4a7;
     height: 20px;
	border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
 }
 QScrollBar::sub-line:vertical {
	border: none;
    background: #3ba4a7;
     height: 20px;
	border-top-left-radius: 4px;
    border-top-right-radius: 4px;
     subcontrol-position: top;
     subcontrol-origin: margin;
 }
 QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
     background-color: #3ba4a7;
     border-top-left-radius: 4px;
     border-top-right-radius: 4px;
     border-bottom-left-radius: 4px;
     border-bottom-right-radius: 4px;
 }

 QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background-color: #a1dbdc;
 }

/* /////////////////////////////////////////////////////////////////////////////////////////////////
CheckBox */
QCheckBox::indicator {
    border: 3px solid #3ba4a7;
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: #3ba4a7;
}
QCheckBox::indicator:hover {
    border: 3px solid #215b5d;
    transform: translateY(-2px);
}
QCheckBox::indicator:checked {
    background: 3px solid #215b5d;
	border: 3px solid #215b5d;
	background-image: url(:/icons/images/icons/cil-check-alt.png);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
RadioButton */
QRadioButton::indicator {
    border: 3px solid #3ba4a7;
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: #3ba4a7;
}
QRadioButton::indicator:hover {
    border: 3px solid #215b5d;
    transform: translateY(-2px);
}
QRadioButton::indicator:checked {
    background: 3px solid #215b5d;
	border: 3px solid #215b5d;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
ComboBox */
QComboBox{
	background-color: #3ba4a7;
	border-radius: 5px;
	border: 1px solid #215b5d;
	padding: 3px;
	padding-left: 10px;
    color: #ffffff;
}
QComboBox:hover{
	border: 2px solid #215b5d;
	transform: translateY(-2px);
}
QComboBox::drop-down {
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 25px;
	border-left-width: 2px;
	border-left-color: #215b5d;
	border-left-style: solid;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
	background-image: url(:/icons/images/icons/cil-arrow-bottom.png);
	background-position: center;
	background-repeat: no-reperat;
 }
QComboBox QAbstractItemView {
	color: #ffffff;
	background-color: #3ba4a7;
	padding: 10px;
	selection-background-color: #3ba4a7;
}


QComboBox:disabled {
    background-color: #ecf8f8;
    border: 1px solid #ecf8f8;
    border: 1px solid #3ba4a7;
	padding: 3px;
	padding-left: 10px;
    color: #202c2c;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QSpinBox */
QSpinBox {
    background-color: transparent;
    border-radius: 3px;
    border: 1px solid #3ba4a7;
    padding: 3px;
    padding-left: 1px;
    height: 22px;
    color: #000000;
}

QSpinBox:hover {
    border: 2px solid #215b5d;
    transform: translateY(-2px);
}

QSpinBox::up-button,
QSpinBox::down-button {
    background-color: #3ba4a7;
    border-radius: 3px;
    border: 1px solid #3ba4a7;
    width: 12px;
    height: 12px;
    background-image: url(:/icons/images/icons/cil-arrow-up.png);
    background-position: center;
    background-repeat: no-repeat;
}

QSpinBox::up-button:hover,
QSpinBox::down-button:hover {
    background-color: #215b5d;
    border: 1px solid #215b5d;
}

QSpinBox::down-button {
    background-image: url(:/icons/images/icons/cil-arrow-down.png);
}

QSpinBox::up-button:pressed,
QSpinBox::down-button:pressed {
    background-color: #3ba4a7;
    border: 1px solid #215b5d;
}

QSpinBox QAbstractItemView {
    color: #a1dbdc;
    background-color: #3ba4a7;
    padding: 10px;
    selection-background-color: #215b5d;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
Sliders */
QSlider::groove:horizontal {
    border-radius: 5px;
    height: 10px;
	margin: 0px;
	background-color: #3ba4a7;
}

QSlider::handle:horizontal {
    background-color: #3ba4a7;
    border: none;
    height: 10px;
    width: 10px;
    margin: 0px;
	border-radius: 5px;
}

QSlider::groove:vertical {
    border-radius: 5px;
    width: 10px;
    margin: 0px;
	background-color: #3ba4a7;
}
QSlider::handle:vertical {
    background-color: #3ba4a7;
	border: none;
    height: 10px;
    width: 10px;
    margin: 0px;
	border-radius: 5px;
}

