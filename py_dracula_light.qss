	padding: 10px;
	selection-color: rgb(0, 0, 0);
	selection-background-color: #a1dbdc;
    color: #ecf8f8;
}
QPlainTextEdit  QScrollBar:vertical {
    width: 20px;
 }

QPlainTextEdit  QScrollBar:horizontal {
    height: 20px;
