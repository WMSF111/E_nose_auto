/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTableWidget */
QTableWidget {
	background-color: transparent;
	padding: 10px;
	border-radius: 5px;
	gridline-color: #a1dbdc;
    outline: none;
}
QTableWidget::item{
	border-color: #215b5d;
	padding-left: 5px;
	padding-right: 5px;
	gridline-color: #a1dbdc;
	color: #215b5d;
}
QTableWidget::item:selected{
	background-color: #215b5d;
    color: #ecf8f8;
}
QHeaderView::section{
	background-color: #3ba4a7;
	max-width: 20px;
	height: 20px;
    font-size: 16px;
	border: none;
	border-style: none;
}
QTableWidget::horizontalHeader {
	background-color: #3ba4a7;
}
QHeaderView::section:horizontal
{
    border: 1px solid #3ba4a7;
	background-color: #3ba4a7;
	padding: 3px;
	border-top-left-radius: 2px;
    border-top-right-radius: 2px;
    color: #215b5d;
}
QHeaderView::section:vertical
{
    border: 1px solid #3ba4a7;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
LineEdit */
QLineEdit {
